@model SalesWeb.ViewModels.CustomerViewModels.GetCustomerViewModel
@{
    Layout = "_Layout";
}
<h1>CUSTOMERS</h1>
<hr/>
<table class="table table-striped table-hover">
    <thead>
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.CustomerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DocumentIdentificationNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    <td>
        @Html.DisplayFor(model => model.CustomerId)
    </td>
    <td>
        @Html.DisplayFor(model => model.Name.FullName)
    </td>
    <td>
        @Html.DisplayFor(model => model.Email.Address)
    </td>
    <td>
        @Html.DisplayFor(model => model.DocumentIdentificationNumber.Number)
    </td>
    <td>
        @Html.DisplayFor(model => model.BirthDate)
    </td>
    </tbody>
