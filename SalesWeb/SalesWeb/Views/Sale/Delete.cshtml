@model SalesWeb.ViewModels.SaleViewModels.GetSaleViewModel
@{
    Layout = "_Layout";
}
<h1>SALE</h1>
<hr/>
<h3>ARE YOU SURE YOU WANT TO DELETE THIS?</h3>
<hr/>
<div>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SaleId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SaleId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Seller.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Seller.Name.CompleteName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Name.CompleteName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalAmount)
        </dt>
        <dd class="col-sm-10">
        @Html.DisplayFor(model => model.TotalAmount)
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="SaleId"/>
        <input type="submit" value="DELETE" class="btn btn-danger"/> |
        <a asp-action="Index">BACK TO LIST</a>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}